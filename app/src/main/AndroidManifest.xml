        </activity>
        <activity android:name=".screens.MainMenu" />
        <activity android:name=".screens.SearchScreen" />
        <activity android:name=".screens.LoanStatusScreen" />
        <activity android:name=".screens.OrdersScreen" />
        <activity android:name=".screens.SettingsScreen"></activity>
    </application>

</manifest>